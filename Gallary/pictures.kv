FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'frames.jpg'
            size: self.size
    BoxLayout:
        padding: 20
        spacing: 30
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 160
        Image:
            size_hint: None, None
            size: 120, 120
            source: 'image_folder.jpg'
        Label:
            height: 70
            text_size: self.width, None
            color: (1, 1, 1, 1)
            text: 'ELYMANE-[GallaryApp]'
<Picture>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    Image:
        id: image
        source: root.source
        size: 200, 200 / self.image_ratio
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            BorderImage:
                source:'shado.jpg'
                border: (10, 10, 10, 10)
                size:(self.width+13, self.height+13)
                pos: (-7, -7)

